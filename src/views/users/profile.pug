extends ../base
include ../mixins/video

block content
    div.profile__data
        if !user.avatarUrl 
            img.avatar(src="https://yoontube.s3.ap-northeast-2.amazonaws.com/default.png",crossorigin)
        else if isKoyeb
            img.avatar(src=user.avatarUrl,crossorigin)
        else 
            if user.avatarUrl.includes("amazonaws")            
                img.avatar(src=src="https://yoontube.s3.ap-northeast-2.amazonaws.com/default.png", crossorigin)
            else if user.avatarUrl.includes("githubusercontent")
                img.avatar(src=user.avatarUrl, crossorigin)
            else 
                img.avatar(src="/"+user.avatarUrl, crossorigin)
        h3=user.name

    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found