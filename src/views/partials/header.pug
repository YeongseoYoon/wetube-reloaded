header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                li
                    a(href="/videos/upload") Upload Video
                li
                    a(href="/users/edit") Edit Profile
                li 
                    a(href="/users/logout") Log Out
                li
                    a(href=`/users/${loggedInUser._id}`)#header__profile
                        if !loggedInUser.avatarUrl 
                            img.small__avatar(src="https://yoontube.s3.ap-northeast-2.amazonaws.com/default.png",crossorigin)
                        else if isKoyeb
                            img.small__avatar(src=loggedInUser.avatarUrl,crossorigin)
                        else 
                            if loggedInUser.avatarUrl.includes("amazonaws")            
                                img.small__avatar(src=src="https://yoontube.s3.ap-northeast-2.amazonaws.com/default.png", crossorigin)
                            else if loggedInUser.avatarUrl.includes("githubusercontent")
                                img.small__avatar(src=loggedInUser.avatarUrl, crossorigin)
                            else 
                                img.small__avatar(src="/"+loggedInUser.avatarUrl, crossorigin)
            else
                li
                    a(href="/login")  Login
                li
                    a(href="/join")  Join